{
	"name": "devuihelper",
	"displayName": "DevUI组件助手",
	"description": "api提示与补全,悬浮提示",
	"keywords": ["devui", "plugin", "helper"],
	"publisher": "sspku",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"icon":"./images/icon.png",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld",
		"onCommand:extension.warning",
		"onCommand:extension.getCurrentFilePath",
		"onCommand:extension.moveBeginningOfBuffer",
		"onLanguage:json",
		"onLanguage:javascript",
		"onLanguage:typescript",
		"onLanguage:html"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "extension.warning",
				"title": "Warning"
			},
			{
				"command": "extension.getCurrentFilePath",
				"title": "当前文件(夹)路径"
			},
			{
				"command": "extension.moveBeginningOfBuffer",
				"title": "move-beginning-of-buffer"
			}
		],
		"keybindings": [
			{
				"command": "extension.moveBeginningOfBuffer",
				"key": "alt+["
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus",
					"command": "extension.getCurrentFilePath",
					"group": "navigation@5"
				}
			],
			"explorer/context": [
				{
					"command": "extension.getCurrentFilePath",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.3.0"
	}, 
	"repository": {
        "type": "git",
        "url": "https://github.com/istarwyh/DevUIHelper"
    }
}
